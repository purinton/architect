{
    "name": "@purinton/architect",
    "type": "module",
    "version": "1.0.6",
    "description": "AI-powered Discord server automation and administration. Integrates Model Context Protocol (MCP) and OpenAI for natural language server management, built on the purinton/discord foundation.",
    "main": "architect.mjs",
    "scripts": {
        "start": "node architect.mjs",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/architect.git"
    },
    "keywords": [
        "discord",
        "ai",
        "openai",
        "mcp",
        "automation",
        "bot",
        "admin",
        "server management",
        "purinton",
        "architect",
        "nodejs"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/architect/issues"
    },
    "homepage": "https://github.com/purinton/architect#readme",
    "devDependencies": {
        "jest": "^30.0.2"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/common": "^1.0.16",
        "@purinton/discord": "^1.0.11",
        "@purinton/mcp-server": "^1.0.20",
        "@purinton/mysql": "^1.0.9",
        "@purinton/openai": "^1.0.1",
        "dotenv": "^16.5.0"
    }
}