{
    "name": "@purinton/architect",
    "type": "module",
    "version": "1.0.0",
    "description": "A modern Discord app built with Node.js, based on the purinton/discord foundation.",
    "main": "architect.mjs",
    "scripts": {
        "start": "node architect.mjs",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/architect.git"
    },
    "keywords": [
        "architect",
        "nodejs"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/architect/issues"
    },
    "homepage": "https://github.com/purinton/architect#readme",
    "devDependencies": {
        "jest": "^30.0.2"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/common": "^1.0.16",
        "@purinton/discord": "^1.0.11",
        "dotenv": "^16.5.0"
    }
}
